PATH=/usr/local/rvm/gems/ruby-{{ruby_version}}/bin:/usr/games:/usr/bin:/usr/sbin:/usr/local/sbin:/usr/local/bin:/sbin:/bin

# Create a new post every 10 minutes
*/10 * * * * root cd {{dev_directory}}/axel-hello && git pull && bash -lc "./script dev" >> /var/log/cron_run_script_dev.log 2>&1

# Commit to staging every hour
0 * * * * root cd {{dev_directory}}/axel-hello && git checkout {{git_repo_default_branch}} && git pull && bash -lc "./script staging" && cd {{staging_directory}} && git pull >> /var/log/cron_run_script_staging.log 2>&1
