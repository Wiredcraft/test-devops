# new_version_minor=$(expr $minor_version + 1)
# sed -E "s/version:\s+([0-9]+)\.[0-9]+\.[0-9]+/version: \1.$new_minor_version.0/" <_config.yml > _config.yml.tmp && mv _config.yml.tmp _config.yml
